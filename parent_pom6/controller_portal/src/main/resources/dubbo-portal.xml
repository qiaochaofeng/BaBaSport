<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
        http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<!-- 1. 跟当前服务起个名    因为 注册中心需要使用 -->
	<dubbo:application name="babasport-portal"/>
	<!-- 2. 连接注册中心 -->
<!-- 	<dubbo:registry address="192.168.200.128:2181" protocol="zookeeper"/> -->
	<!-- 设置直连 -->
	<dubbo:registry address="N/A"/>
	<!-- 3. 消费        -->
	<dubbo:reference interface="cn.itcast.core.service.solr.SolrService" id="solrServiceImpl"
		url="dubbo://127.0.0.1:20881"
	/>
	<!-- 设置超时时间 -->
	<dubbo:consumer timeout="600000" check="false"/>
	
	<!-- 商品 -->
	<dubbo:reference interface="cn.itcast.core.service.product.ProductService" id="productSeriveImpl"
		url="dubbo://127.0.0.1:20880"
	/>
	
	<!-- 颜色 -->
	<dubbo:reference interface="cn.itcast.core.service.color.ColorService" id="colorServiceImpl"
		url="dubbo://127.0.0.1:20880"
	/>
	<!-- 库存列表 -->
	<dubbo:reference interface="cn.itcast.core.service.sku.SkuService" id="skuServiceImpl"
		url="dubbo://127.0.0.1:20880"
	/>
	<!-- 静态页面 -->
	<dubbo:reference interface="cn.itcast.core.service.cms.StaticPageService" id="staticPageServiceImpl"
		url="dubbo://127.0.0.1:20880"
	/>
	<dubbo:reference interface="cn.itcast.core.service.cms.CmsService" id="cmsServiceImpl"
		url="dubbo://127.0.0.1:20880"
	/>
	<!-- 广告 -->
	<dubbo:reference interface="cn.itcast.core.service.ad.AdService" id="adServiceImpl"
		url="dubbo://127.0.0.1:20880"
	/>
	<!-- 登入 -->
	<dubbo:reference interface="cn.itcast.core.service.buyer.BuyerService" id="buyerServiceImpl"
		url="dubbo://127.0.0.1:20883"
	/>
	<!-- 购物车 -->
	<dubbo:reference interface="cn.itcast.core.service.cart.BuyerCartService" id="buyerCartServiceImpl"
		url="dubbo://127.0.0.1:20883"
	/>
	
</beans>